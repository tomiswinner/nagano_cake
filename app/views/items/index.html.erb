<%= render(partial: "/layouts/genrebar-horizon", locals: {genres: @genres}) %>
<div class="container px-2 vh-100">
  
  <div class=" my-4 mx-2 row d-flex justify-content-start">
    <%= render(partial: "/layouts/genrebar", locals: {genres: @genres}) %>
    <div class="col-12 col-md-9 mx-auto">
        <h2>
          <%= @title %>一覧<span class="small">(全<%= @items.count %>件)</span>
        </h2>
        
        <div class="row my-5 h-50">
          <% @items.each do |item| %>
            <div class="col-3 my-4">
              <%= link_to(item_path(item.id))  do %>
                <%= attachment_image_tag(item, :image, fallback: "no_image.jpg", size: "150x150") %>
              <% end %>
              <%= item.name %><br>
              ￥<%= item.delimited_taxed_price %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-12 col-md-9">
      <%= paginate @items %>
  </div>
  </div>
</div>