<%= render(partial: "/layouts/genrebar-horizon", locals: {genres: @genres}) %>
<div class="container px-2 vh-100">
  
  <div class=" my-4 mx-3 row d-flex justify-content-start">
    <%= render(partial: "/layouts/genrebar", locals: {genres: @genres}) %>
    <div class="col-md-6 col-12 d-flex justify-content-center">
      <%= attachment_image_tag(@item, :image, fallback: "no_image.jpg", size: "250x250") %>
    </div>
    <div class="col-md-4 col-12 d-flex flex-column">
      <h3>
        <%= @item.name %>
      </h3>
      <p>
        <%= @item.introduction %>
      </p>
      <p>
        <span class="font-weight-bold"><%= @item.delimited_taxed_price %>円</span>(税込)
      </p>
      <%= form_with(model: @cart_item, url: cart_items_path,local: true, class: "form-group") do |f| %>
        <%= f.hidden_field :customer_id, value: current_customer.id %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.select :amount, *[1..9], {}, {class: "form-control w-50 d-inline-block mb-4"} %>
        <%= f.submit "カートに入れる", class: "btn btn-sm btn-success d-inline-block" %>
      <% end %>
      </div>
  </div>

</div>