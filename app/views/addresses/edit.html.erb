<%= render(partial: "/layouts/err-msg") %>
<div class="container px-2">
  
  <div class=" my-4 mx-3 row d-flex justify-content-start">
    <h2>配送先編集</h2>
  </div>

  <div class="row mx-3 d-flex justify-content-start">    
    <%= form_with(model: @address, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="form-group">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
      </div>
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    <% end %>
  </div>
</div>