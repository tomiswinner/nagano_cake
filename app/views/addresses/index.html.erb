<div class="container px-2">
  
  <div class=" my-4 mx-2 row d-flex justify-content-start">
    <h2>配送先登録/一覧</h2>
  </div>
  
  <%= form_with(model: @address, url: addresses_path, local: true) do |f| %>
    <div class="my-4 mx-2 form-group small row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3 col-form-label" %>
      <div class="col-9">
        <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control w-50" %>
      </div>
    </div>
    <div class="my-4 mx-2 form-group small row">
      <%= f.label :address, "住所", class: "col-3 col-form-label" %>
      <div class="col-9">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div>
    </div>
    <div class="my-4 mx-2 form-group small row">
      <%= f.label :name, "宛名", class: "col-3 col-form-label" %>
      <div class="col-9">
        <%= f.text_field :name, placeholder: "令和花子", class: "form-control w-50" %>
      </div>
    </div>
    <div class="my-4 mx-2 form-group small row d-flex justify-content-end">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="my-4 mx-2 row d-flex　mb-5 pb-5">
    <table class="col-12 col-md-10 table table-bordered">
      <thead class="table-success">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to("編集する", edit_address_path(address.id), class: "btn btn-success btn-sm") %>
              <%= link_to("削除する", "addresses/#{address.id}", method: :delete, class: "btn btn-danger btn-sm") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>