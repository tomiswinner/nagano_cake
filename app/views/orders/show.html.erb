<div class="container px-2">
  
  <div class=" my-4 mx-2 row d-flex justify-content-start">
    <h2>注文履歴詳細</h2>
  </div>

  <div class="my-4 row mx-2 d-flex justify-content-start">    
  
    <div class="col-12 col-md-6">
      <h3 class="my-4">注文情報</h3>
      <table class="table table-bordered">
        <tr>
          <th  class="table-success">注文日</th>
          <td><%= @order.return_formatted_created_at %></td>
        </tr>
        <tr>
          <th  class="table-success">配送先</th>
          <td>
            <%= "〒" + @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th  class="table-success">支払方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <th  class="table-success">ステータス</th>
          <td><%= @order.status %></td>
        </tr>
        
      </table>
    </div>
    
    <div class="col-md-4">
      <h3 class="my-4">請求情報</h3>
      <table class="table table-bordered">
        <tr>
          <th class="table-success">商品合計</th>
          <td><%= delimitate(@order.total_price) %></td>
        </tr>
        <tr>
          <th class="table-success">配送料</th>
          <td><%= @order.shipping_fee %></td>
        </tr>
        <tr>
          <th class="table-success">ご請求額</th>
          <td><%= delimitate(@order.total_price_with_shipping) %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="my-4 mx-2 row justify-content-start pb-5">
    <table class="table table-bordered col-12 col-md-6">
      <thead class="table-success">
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item_name %></td>
            <td><%= delimitate(order_item.taxed_price) %></td>
            <td><%= order_item.amount %></td>
            <td><%= delimitate(order_item.subtotal) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>