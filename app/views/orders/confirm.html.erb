<%= render(partial: "/layouts/err-msg") %>
<div class="container px-2">
  
  <div class=" my-4 mx-3 row d-flex justify-content-start">
    <h2>注文情報確認</h2>
  </div>

  <div class="row mx-3 d-flex justify-content-start">    
    <table class="table col-md-6">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <% item = Item.find(cart_item.item_id) %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.delimited_taxed_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>            
          </tr>
        <% end %>
      </tbody>
    </table>
    <table class="table col-md-4">
      <tr>
        <th>送料</th>
        <td><%= @order.get_shipping_fee %></td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td><%= @order.calculate_total_items_price %></td>
      </tr>
      <tr>
        <th></th>
        <td><%= @order.calculate_total_price_with_shipping %></td>
      </tr>
    </table>
  </div>
  <div>
    <h3>支払方法</h3>
    <p><%= @order.payment %></p>
  </div>
  <div>
    <h3>お届け先</h3>
    <p>〒<%= @order.postal_code + " " + @order.address + " " + @order.name  %></p>
  </div>
  <%= form_with(model: @order, url: orders_path, local: true, class: "form-group" ) do |f| %>
    <%= f.hidden_field :customer_id, value: @order.customer_id %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.hidden_field :address, value: @order.address %>
    <%= f.hidden_field :name, value: @order.name %>
    <%= f.hidden_field :payment, value: @order.payment %>
    <%= f.hidden_field :total_price, value: @order.calculate_total_price_with_shipping %>
    <%= f.hidden_field :shipping_fee, value: @order.get_shipping_fee %>
    <%= f.hidden_field :status, value:  "入金待ち"%>
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
  <% end %>
  <div class="row justify-content-center">
  </div>
</div>