<h2>注文履歴一覧</h2>
<table>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td>
          <% customer = Customer.find(order.customer_id) %>
          <%= customer.last_name + customer.first_name %>
        </td>
        <td>
          <%= OrderItem.where(order_id: order.id).sum(:amount) %>
        </td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>