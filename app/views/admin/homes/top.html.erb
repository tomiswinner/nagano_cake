<h2>注文履歴一覧</h2>
<table>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
      </tr>
      <tr>
        <td>
          <% customer = Customer.find(order.customer_id) %>
          <%= customer.last_name + customer.first_name %>
        </td>
      </tr>
      <tr>
        <th>注文合計</th>
        <td>
          <% each_amount_arr = OrderItem.where(order_id: order.id).select("amount") %>
          <% if each_amount_arr.sum %>
            <%= each_amount_arr %>
          <% else %>
            <%= 0 %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>