<%= form_with(model: item,url: post_path,local: true) do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :image, "商品画像" %></th>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <th><%= f.label :name,"商品名" %></th>
          <td><%= f.text_field :name,placeholder: "商品名", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :introduction, "商品説明" %></th>
          <td><%= f.text_area :introduction,placeholder: "ここに説明文を記述します", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :genre_id, "ジャンル" %></th>
          <td><%= f.select :genre_id, Genre.all.collect {|genre| [genre.name,genre.id]}, \
                  {prompt: "--選択してください--"},{ class: "form-select"} %></td>
        </tr>
        <tr>
          <th><%= f.label :price, "税抜価格" %></th>
          <td><%= f.number_field :price,placeholder: "1000", class: "form-control d-inline w-75" %> 円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, true, checked: true %>
            <%= f.label :is_active, "販売停止中" %>
            <%= f.radio_button :is_active, false %>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit submit_txt, class: "btn btn-success" %></td>
        </tr>
      </table>
    
  <% end %>