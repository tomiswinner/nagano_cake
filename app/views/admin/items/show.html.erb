<h2>商品詳細</h2>
<div>
  <%= attachment_image_tag(@item, :image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40') %>
</div>
<table>
  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= Genre.find(@item.genre_id).name %></td>
  </tr>
  <tr>
    <th>税込価格<br>(税抜価格)</th>
    <td>
      <%= ((@item.price * 1.1).to_i).to_s(:currency) %>
      (<%= @item.price.to_s(:currency) %>)円
    </td>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <% if @item.is_active %>
      <td>販売中</td>
    <% else %>
      <td>販売停止中</td>
    <% end %>
  </tr>
  <tr>
    <td><%= link_to("編集する",edit_admin_item_path(@item.id)) %></td>
  </tr>
</table>
