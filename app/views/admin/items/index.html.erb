<div>
  <h2>商品一覧</h2>
  <!--新規登録ボタン-->
  <%= link_to("new",new_admin_item_path) %>
</div>

<table>
  <thead>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to(item.name,admin_item_path(item.id)) %></td>
        <td><%= item.price %></td>
        <td><%= Genre.find(item.genre_id).name %></td>
        <% if item.is_active %>
          <td></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= paginate(@items) %></td>
    </tr>
  </tfoot>
</table>
