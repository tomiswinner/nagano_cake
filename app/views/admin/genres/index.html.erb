<%= render(partial: "/layouts/err-msg") %>

<div class=" my-4 mx-3 row d-flex justify-content-start">
  <h2>ジャンル一覧・追加</h2>
</div>

<div class="row mx-3 d-flex justify-content-start my-5">
  <%= form_with(model: @genre,url: "/admin/genres",local: true,class: "form-group d-flex justify-content-center w-50") do |f| %>
    <%= f.label :name, "ジャンル名",class: "font-weight-bold control-label" %>
    <%= f.text_field :name,placeholder: "ジャンル名",class: "form-control w-50 mx-auto" %>
    <%= f.submit "新規登録",class: "btn btn-success d-block" %>
  <% end %>
</div>

<div class="row mx-3 d-flex justify-content-start">
  <table class="table col-md-4">
    <thead class="table-info">
      <th>ジャンル</th>
      <th></th>
    </thead>
    <tbody class="table-light">
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to("編集する",edit_admin_genre_path(genre.id),class: "btn btn-success") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>