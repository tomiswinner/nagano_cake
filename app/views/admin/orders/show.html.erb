<%= render(partial: "/layouts/err-msg") %>
<h2>注文履歴詳細</h2>
<table>
  <tr>
    <th>購入者</th>
    <td>
      <% customer_fullname =  Customer.find(@order.customer_id).last_name \
                            + Customer.find(@order.customer_id).first_name %>
      <%= link_to(customer_fullname,admin_home_path(customer_id: @order.customer_id)) %>
    </td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td><%= form_with(model: @order, url: admin_order_path) do |f| %>
          <%= f.select(:status, Order.statuses.keys.to_a, {}) %>
          <%= f.submit("更新") %>
        <% end %>
    </td>
  </tr>
</table>
<table>
  <thead>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
  </thead>
  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= Item.find(order_item.item_id).name %></td>
        <td><%= order_item.price.to_s(:delimited, delimiter: ",") %></td>
        <td><%= order_item.amount %></td>
        <td><%= (order_item.price * order_item.amount).to_s(:delimited, delimiter: ",") %></td>
        <td>
          <%= form_with(model: order_item, url: admin_order_item_path(order_item.id)) do |f| %>
            <%= f.select(:status, OrderItem.statuses.keys.to_a,{}) %>
            <%= f.submit("更新") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= @order.total_price.to_s(:delimited, delimiter:(",")) %></td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.shipping_fee.to_s(:delimited, delimiter:(",")) %></td>
  </tr>
  <tr>
    <th>請求金額合計</th>
    <td><%= (@order.shipping_fee + @order.total_price).to_s(:delimited, delimiter:(",")) %></td>
  </tr>
</table>