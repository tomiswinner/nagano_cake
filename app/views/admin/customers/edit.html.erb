<%= render(partial: "/layouts/err-msg") %>
<h2><%= @customer.last_name + @customer.first_name %>の会員情報編集</h2>
<div>
  会員ID
  <%= @customer.id %>
</div>
<%= form_with(model: @customer,url: admin_customer_path(@customer.id), local: true) do |f| %>
  <div>
    <%= f.label :last_name, "氏名" %>
    <%= f.text_field :last_name %><%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name_kana, "フリガナ" %>
    <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
  </div>
  <div>
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.telephone_field :telephone_number %>
  </div>
  <div>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :is_active, "会員ステータス" %>
    <%= f.radio_button :is_active,true %>
    <%= f.radio_button :is_active,false %>
  </div>
  <div>
    <%= f.submit "変更を保存" %>
  </div>
<% end %>