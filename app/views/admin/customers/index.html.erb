<div class="container px-2">
  <div class=" my-4 mx-3 row d-flex justify-content-start">
    <h2>会員一覧</h2>
  </div>
  
  <div class="my-4 row mx-3 d-flex justify-content-start my-5">
    <table class="table">
      <thead class="table-success">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to(customer.full_name ,admin_customer_path(customer.id)) %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active %>
                <span class="text-success font-weight-bold">有効</span>
              <% else %>
                <span class="text-muted">退会</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row mx-3 d-flex justify-content-center my-5 pb-5">
    <%= paginate @customers %>
  </div>
</div>