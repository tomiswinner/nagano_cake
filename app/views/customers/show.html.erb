
<div class="container px-2">
  
  <div class=" my-4 mx-2 row d-flex justify-content-start">
    <h2>マイページ</h2>
  </div>
  <div class=" my-4 mx-2 row d-flex justify-content-start">
      <span class="font-weight-bold col-3">登録情報</span>
      <%= link_to("編集する", customer_edit_path, class: "btn btn-success col-2") %>
  </div>
  <div class=" my-4 mx-2 row d-flex justify-content-start">
    <table class="table table-bordered w-75">
        <tr>
          <th class="table-secondary w-25">氏名</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary w-25">カナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-secondary w-25">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-secondary w-25">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-secondary w-25">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-secondary w-25">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
    </table>
  </div>
  
  <div class=" my-4 mx-2 row d-flex justify-content-start">
    <span class="col-3 font-weight-bold">配送先</span>
    <%= link_to("一覧を見る",addresses_path, class: "btn btn-primary col-2") %>
  </div>
  <div class=" my-4 mx-2 row d-flex justify-content-start mb-5 pb-5">
    <span class="font-weight-bold col-3">注文履歴</span>
    <%= link_to("一覧を見る",orders_path, class: "btn btn-primary col-2") %>
  </div>
  
</div>