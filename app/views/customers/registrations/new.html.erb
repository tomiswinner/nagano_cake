<div class="container px-3">
  
  <div class=" my-4 mx-2 row d-flex justify-content-start">
    <h2>Sign up</h2>
  </div>

  <div class=" my-4 mx-2 row d-flex justify-content-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :last_name, "(姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.label :first_name, "(名)" %>
        <%= f.text_field :first_name %>
      </div>
      
      <div class="field">
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana %>
        <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana %>
      </div>
      
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>
      
      <div class="field">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
      </div>
      
      <div class="field">
        <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
        <%= f.text_field :telephone_number %>
      </div>
      
    
      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
  <div class=" my-4 mx-2 row">
    
    <h2>既に登録済みの方</h2>
    <%= render "customers/shared/links", link_message_sessions: "こちら" %>からログインしてください
  </div>
</div>